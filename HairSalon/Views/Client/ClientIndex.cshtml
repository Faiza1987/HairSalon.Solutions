@{
  Layout = "_Layout";
}

<div class="container">
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var client in Model)
      {
        <li><a href= "/clients/@client.GetId()">  @client.GetName()</a> ||
        <a href="/clients/@client.GetId()/update"> Edit</a> || <a href="/clients/@client.GetId()/delete"> Delete</a></li>
      }
    </ul>
  }
  <br>
  <hr>
  <h4><a href="/clients/new"> Add New Client </a></h4>
  <hr>
  <h4><a href="/"> Home </a></h4> || <h4><a href="/clients/delete"> Delete All </a></h4>
  <hr>
</div>
