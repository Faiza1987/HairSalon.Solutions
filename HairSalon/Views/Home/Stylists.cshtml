@{
  Layout = "_Layout";
}

<div class="container">
        <h3>List of Stylists</h3>
        @if (@Model.Count == 0)
        {
          <h3>No Stylists have been added yet!</h3>
        }
        <br>
        <br>
        <hr>
        <ol>
            @foreach (var stylist in Model)
            {
              <li><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></li>
            }
        </ol>
        <hr>
        <br>
        <hr>
        <h4><a href='/stylists/form'>Add a new Stylist</a></h4>
        <hr>
        <h4><a href='/'>Home</a></h4>
        <hr>
    </div>
