@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Stylist: @Model["stylist"].GetName()</h2>
<hr>
@if (@Model["stylistClients"].Count != 0)
{
  <h4> This stylist is assigned to the following clients:</h4>
  <ul>
  @foreach (Client client in @Model["stylistClients"])
  {
    <li>@client.GetName()<a href="/clients/@client.GetId()/update"> Edit </a> | <a href="/clients/@client.GetId()/delete"> Delete </a></li>
  }
  </ul>
}
<br>
<h4>Add a client:</h4>
<form action='/actions/@Model["stylist"].GetId()/clients/new' method="post">
  <label for="client-id"> Select a client</label>
  <select id="client-id" name="client-id" type="text">
    @foreach (var client in @Model["allClients"])
    {
      <option value="@client.GetId()">@client.GetName()</option>
    }
  </select>
  <br>
  <button type="submit"> Add </button>
</form>
<hr>
<p><a href="/"> Return Home </a></p>
