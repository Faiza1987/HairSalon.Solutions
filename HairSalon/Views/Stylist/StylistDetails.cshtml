@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Stylist: @Model["stylist"].GetName()</h2>
<hr>
@if (@Model["stylistSpecialties"].Count != 0)
{
  <h4> This stylist specializes in the following:</h4>
  <ul>
  @foreach (Specialty specialty in @Model["stylistSpecialties"])
  {
    <li>@specialty.GetDescription()<a href="/specialties/@specialty.GetId()/update"> Edit </a> | <a href="/specialties/@specialty.GetId()/delete"> Delete </a></li>
  }
  </ul>
}
<br>
<h4>Add a specialty:</h4>
<form action='/stylists/@Model["stylist"].GetId()/specialties/new' method="post">
  <label for="specialty-id"> Select a specialty</label>
  <select id="specialty-id" name="specialty-id" type="text">
    @foreach (var specialty in @Model["allSpecialties"])
    {
      <option value="@specialty.GetId()">@specialty.GetDescription()</option>
    }
  </select>
  <br>
  <button type="submit"> Add </button>
</form>
<br>
<hr>
@if (@Model["stylistClients"].Count != 0)
{
  <h4> This stylist has the following clients:</h4>
  <ul>
  @foreach (Client client in @Model["stylistClients"])
  {
    <li>@client.GetName()<a href="/clients/@client.GetId()/update"> Edit </a> | <a href="/clients/@client.GetId()/delete"> Delete </a></li>
  }
  </ul>
}
<br>
<h4>Add a client:</h4>
<form action='/stylists/@Model["stylist"].GetId()/clients/new' method="post">
  <label for="client-id"> Select a client:</label>
  <select id="client-id" name="client-id" type="text">
    @foreach (var client in @Model["allClients"])
    {
      <option value="@client.GetId()">@client.GetName()</option>
    }
  </select>
  <br>
  <button type="submit"> Add </button>
</form>
<br>
<hr>
<p><a href="/"> Return Home </a></p>
